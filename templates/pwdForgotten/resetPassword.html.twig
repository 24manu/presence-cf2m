{% extends 'template.sbadmin.html.twig' %}
{% block title %}{{ parent() }} - Récupération de mot de passe{% endblock %}
{% block classbody %} class="bg-primary"{% endblock %}
 {% block content %}
     <div id="layoutAuthentication">
         <div id="layoutAuthentication_content">
             <main>
                 <div class="container">
                     <div class="row justify-content-center">
                         <div class="col-lg-5">
                             <div class="card shadow-lg border-0 rounded-lg mt-5">
                                 <div class="card-header"><h4 class="text-center font-weight-light my-4">Récupération de
                                         votre mot de passe</h4> <h5 class="text-center font-weight-light my-5">
                                         Veuillez remplir la case ci-dessous</h5></div>
                                 <div class="card-body">
                                     <form action="" method="post" name="recoveryPwd">

                                         <div class="form-floating mb-3">
                                             <input name="email" class="form-control"
                                                    id="email" type="email" placeholder="Votre adresse mail"
                                                    autocomplete="email" required autofocus/>
                                             <label for="email">Votre adresse mail</label>
                                         </div>
                                         <div class="text-center">
                                             <input class="btn btn-primary" type="submit" value="Envoyer">
                                         </div>
                                     </form>
                                 </div>
                             </div>
                         </div>
                     </div>
             </main>
         </div>
     </div>
 {% endblock %}